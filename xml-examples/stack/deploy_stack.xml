<?xml version="1.0" encoding="UTF-8"?>
<wps:DeployProcess xmlns:eoc="http://www.opengis.net/wps/2.0/profile/tb13/eoc" xmlns:owc="http://www.opengis.net/owc/1.0" xmlns:ows="http://www.opengis.net/ows/2.0" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:wps="http://www.opengis.net/wps/2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:n1="http://www.altova.com/samplexml/other-namespace" service="WPS" version="2.0.0" xml:lang="en-us" immediateDeployment="true" xsi:schemaLocation="http://www.opengis.net/wps/2.0 wpsDeployProcess.xsd">
  <wps:ProcessDescription>
    <wps:ProcessOffering xmlns:atom="http://www.w3.org/2005/Atom" jobControlOptions="async-execute" outputTransmission="value reference">
      <wps:Process>
        <ows:Title>Stack1</ows:Title>
        <ows:Identifier>Stack1</ows:Identifier>
        <!-- The CWL file reference is provided here -->
        <ows:Metadata xlink:role="http://www.opengis.net/eoc/applicationContext/cwl" xlink:href="https://raw.githubusercontent.com/spacebel/testbed14/master/cwl-examples/Stacker/Stacker.cwl"/>
        <wps:Input minOccurs="0" maxOccurs="unbounded">
          <ows:Title>Input Image</ows:Title>
          <ows:Identifier>files</ows:Identifier>
          <!-- The following block includes all CWL properties  -->
          <!-- Note that they can be directly generated from the provided CWL file -->
          <!-- The following block holds a flag indicating that this input is an Earth Observation image (it will heps the EMS to know that this input is found using a Gateway search)  -->
          <ows:AdditionalParameters xlink:role="http://www.opengis.net/eoc/applicationContext/inputMetadata">
            <ows:AdditionalParameter>
              <ows:Name>EOImage</ows:Name>
              <ows:Value>true</ows:Value>
            </ows:AdditionalParameter>
          </ows:AdditionalParameters>
               
          <!-- EO Image is always of type ComplexData (= file). In this example, maxOccurs set as unbounded, indicates it may be a list of files -->
          <wps:ComplexData>
            <wps:Format mimeType="application/zip" default="true"/>
            <wps:Format mimeType="application/x-binary"/>
          </wps:ComplexData>
        </wps:Input>
        <wps:Input minOccurs="1" maxOccurs="1">
          <ows:Title>Type of Stacked Image</ows:Title>
          <ows:Identifier>output_file_type</ows:Identifier>
          <wps:LiteralData>
            <wps:Format mimeType="text/plain" default="true"/>
            <LiteralDataDomain default="true">
              <ows:AnyValue/>
              <ows:DataType ows:reference="http://www.w3.org/2001/XMLSchema#string">string</ows:DataType>
            </LiteralDataDomain>
          </wps:LiteralData>
        </wps:Input>
        <wps:Input minOccurs="1" maxOccurs="1">
          <ows:Title>Name of the Produced Image</ows:Title>
          <ows:Identifier>output_name</ows:Identifier>
          <wps:LiteralData>
            <wps:Format mimeType="text/plain" default="true"/>
            <LiteralDataDomain default="true">
              <ows:AnyValue/>
              <ows:DataType ows:reference="http://www.w3.org/2001/XMLSchema#string">string</ows:DataType>
            </LiteralDataDomain>
          </wps:LiteralData>
        </wps:Input>
        <!--  NDVI OUTPUT FILE(S)  -->
        <wps:Output>
          <ows:Title>Stacked Image</ows:Title>
          <ows:Abstract>Stacked Image</ows:Abstract>
          <ows:Identifier>output</ows:Identifier>
          <wps:ComplexData>
            <wps:Format mimeType="application/octet-stream" default="true"/>
          </wps:ComplexData>
          <ows:AdditionalParameters xlink:role="http://www.opengis.net/profiles/eoc/output">
            <!-- Path provides the path of the output-->
            <ows:AdditionalParameter>
              <ows:Name>path</ows:Name>
              <ows:Value>output/image.tiff</ows:Value>
            </ows:AdditionalParameter>
          </ows:AdditionalParameters>
        </wps:Output>
      </wps:Process>
    </wps:ProcessOffering>
  </wps:ProcessDescription>
  <!-- The deployment profile is a WPS-T property to define the application package format (in this case the dockerized application for EOC)-->
  <wps:DeploymentProfileName>http://www.opengis.net/profiles/eoc/dockerizedApplication</wps:DeploymentProfileName>
  <wps:ExecutionUnit>
    <!-- In our case, the Execution Unit is not a BPEL, a Java, but is the Docker Image reference -->
    <wps:Reference xlink:href="docker-registry.crim.ca/ogc-public/snap6-stack-creation:v2.1"/>
  </wps:ExecutionUnit>
</wps:DeployProcess>

